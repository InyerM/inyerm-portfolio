---
import { Trans } from "astro-i18next/components";
import { t } from "i18next";
import CardLink from "./CardLink.astro";

const options = [
  {
    href: "mailto:inyermedina10@gamil.com",
    name: "email",
    img: "gmail-icon",
    color: "after:bg-blue-700",
  },
  {
    href: "https://github.com/InyerM",
    name: "github",
    img: "github-icon",
    color: "after:bg-violet-400",
  },
  {
    href: "https://www.linkedin.com/in/inyerm/",
    name: "linkedin",
    img: "linkedin-icon",
    color: "after:bg-orange-600",
  },
  {
    href: "https://twitter.com/Inyer_M",
    name: "twitter",
    img: "twitter-icon",
    color: "after:bg-yellow-500",
  },
];
---

<section class="mx-auto mt-10 w-full">
  <h1 class="text-5xl font-black text-white">{t("contactSection.title")}</h1>
  <p class="mt-5 text-lg text-white max-w-xl mx-auto">{t("contactSection.description")}</p>
  <div class="my-20 grid sm:grid-cols-2 grid-cols-1 gap-x-3 justify-items-start items-start">
    <section class="grid md:grid-cols-2 gap-5 grid-cols-1 my-5 w-full px-0 md:px-5">
      {options.map((option) => <CardLink {...option} />)}
    </section>
    <section class="flex flex-col gap-3 w-full mx-2 md:my-0 my-5">
      <p class="text-white text-md my-2 text-start">
        <Trans i18nKey="contactSection.contactViaMessage">
          You can send me a message through the following <span class="text-yellow-500">form</span>
        </Trans>
      </p>
      <input
        type="text"
        class="bg-gray-800 text-white p-2 rounded-lg border-none outline-none ring-blue-300 focus:ring-1 mt-2 w-full transition-all duration-300"
        placeholder={t("contactSection.subject")}
      />
      <textarea
        class="bg-gray-800 text-white p-2 rounded-lg border-none outline-none ring-blue-300 focus:ring-1 mt-2 w-full transition-all duration-300"
        placeholder={t("contactSection.message")}
        maxlength="300"></textarea>
      <button class={`send-button`}>
        <i class="bx bx-send mr-2"></i>
        <span>{t("contactSection.sendMessage")}</span>
      </button>
    </section>
  </div>
</section>
