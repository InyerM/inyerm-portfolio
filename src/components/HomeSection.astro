---
import { t } from "i18next";
import { Trans } from "astro-i18next/components";
import { socialLinks } from "../constants";
import Button from "./Button.astro";
import CustomSocialLinks from "./CustomSocialLinks.astro";
---

<div
  class="rounded-full p-1 bg-gradient-to-br from-primary to-secondary z-10 hover:scale-110 transition-all ease-out cursor-pointer duration-300">
  <img src="/images/avatar.png" alt="" width={200} height={200} class="rounded-full" />
</div>
<h2 class={`mt-5 text-2xl font-bold text-white`}>{t("homeSection.title")}</h2>
<h1 class="text-5xl font-black text-white">{t("homeSection.subtitle")}</h1>
<p class="mt-3 text-lg text-white max-w-xl">
  <Trans i18nKey={"homeSection.description"}>
    I'm a <span class={`font-semibold custom-gradient-text`}>Fullstack Developer</span>. I'm
    passionate about technology and I love to learn new things. I'm currently working as a NestJs at <a
      href="https://inlaze.com/en/"
      target="_blank"
      class="text-yellow-300 font-semibold">Inlaze</a
    >.
  </Trans>
</p>
<section class="flex gap-5 p-3 items-center justify-center md:flex-row flex-col">
  <Button>{t("homeSection.downloadCv")}</Button>
  <div class="flex gap-2 justify-center">
    {socialLinks.map((link, index) => <CustomSocialLinks key={index} {...link} />)}
  </div>
</section>

